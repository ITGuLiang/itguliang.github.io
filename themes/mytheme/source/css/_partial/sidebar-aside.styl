#sidebar
  float:left
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  color: #999
  line-height: 1em
  text-shadow: 0 1px #fff
  font-weight: bold
  padding: 10px 0
  border-bottom: 1px solid #ddd

.widget
  color: color-sidebar-text
  padding: 15px 0
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc