#footer
  padding: 10px 0
  color: color-grey
  float: left
  width: 100%
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em
  text-align: center

.back-to-top
  font-size: 24px
  color: #444
  position: fixed
  bottom: 20px
  right: 25px
  display: none
  &:hover
    cursor: pointer